---
const url = Astro.request.canonicalURL.toString();
const path = '/' + url.replace(Astro.site, '');
---
<style lang="scss">
  @use '../styles/_mixins.scss' as *;

  .site-header {
    margin: 0 auto;
    max-width: 1920px;
    padding: 1rem 2rem;
    position: relative;

    @media (min-width: 390px) {
      padding: 2.5rem;
    }

    @media (min-width: 1000px) {
      align-items: center;
      display: grid;
      gap: 2.5rem;
      grid-template-columns: minmax(0, 20rem) minmax(0, 1fr);
    }

    @media (min-width: 1200px) {
      grid-template-columns: minmax(0, 1fr) minmax(0, 1fr);
    }

    @media (min-width: 1400px) {
      gap: 5rem;
      padding: 2.5rem 5rem;
    }

    @media (min-width: 1600px) {
      display: grid;
      grid-template-columns: minmax(0, 1fr) minmax(0, 1fr);
    }

    &.show {
      background-color: var(--site-header__background-color);

      @media (min-width: 1000px) {
        background-color: transparent;
      }
    }

    .site-title {
      display: flex;
      align-items: center;
      font-size: 2rem;
      font-variation-settings: 'wdth' 125;
      font-weight: 800;
      height: 5rem;
      line-height: 1;
      padding-right: 5rem;
      text-transform: uppercase;

      @media (min-width: 1000px) {
        padding-right: 0;
      }

      a {
        color: var(--black);
        text-decoration: none;

        &:hover {
          transform: scale(1.04);
        }

        &:active {
          transform: scale(0.96);
        }
      }
    }

    nav {
      margin-left: -0.875rem;

      .menu-toggle__container  {
        position: absolute;
        top: 0.5rem;
        right: 0;
        padding: 1.25rem;

        @media (min-width: 390px) {
          padding: 2.5rem;
        }

        @media (min-width: 1000px) {
          display: none;
        }

        @at-root .no-js .menu-toggle__container {
          display: none;
        }
      }

      ul {
        list-style-type: none;
        padding: 0;
        grid-row: 2 / 3;

        @media (min-width: 1000px) {
          align-items: center;
          display: flex;
          gap: 0.5rem;
          justify-content: space-between;
        }

        @at-root .site-header:not(.show) nav ul {
          @media (max-width: 999px) {
            border: 0;
            clip: rect(0 0 0 0);
            height: auto;
            margin: 0;
            overflow: hidden;
            padding: 0;
            position: absolute;
            width: 1px;
            white-space: nowrap;
          }
        }

        li {
          a {
            align-items: center;
            color: var(--nav-link__color);
            display: flex;
            font-size: 1.25rem;
            font-variation-settings: 'wdth' 125;
            font-weight: 800;
            justify-content: center;
            min-width: 60px;
            padding: 0.875rem;
            text-decoration: none;
            text-transform: uppercase;

            &:hover {
              transform: scale(1.06);
            }

            &:active {
              transform: scale(0.94);
            }

            svg {
              fill: currentColor;
              height: 2rem;
              vertical-align: middle;
              width: 2rem;
            }
          }
        }
      }
    }
  }

  .skip-link {
    display: inline-block;
    color: var(--color-primary-shade);
    position: absolute;
    top: 1rem;
    left: 1rem;

    &:hover {
      color: var(--color-light-shade);
    }

    &:not(:focus) {
      @include visually-hidden;
    }
  }

  .menu-toggle {
    align-items: center;
    background-color: var(--menu-toggle__background-color);
    border: none;
    cursor: pointer;
    border-radius: 99rem;
    display: flex;
    justify-content: center;
    height: 3.75rem;
    width: 3.75rem;

    &:hover {
      transform: scale(1.04);
    }

    &:active {
      transform: scale(0.96);
    }

    @at-root .site-header.show nav .menu-toggle {
      background-color: var(--menu-toggle--show__background-color);
    }

    @media (min-width: 1000px) {
      border: 0;
      clip: rect(0 0 0 0);
      height: auto;
      margin: 0;
      overflow: hidden;
      padding: 0;
      position: absolute;
      width: 1px;
      white-space: nowrap;
    }
  }

  .menu-toggle__icon {
    display: flex;
    flex-direction: column;
    gap: 6px;

    div {
      background-color: var(--white);
      display: block;
      width: 26px;
      height: 4px;
      border-radius: 1px;
      transform-origin: center;
      transition: all 0.3s ease-out;
    }

    @at-root .site-header.show nav .menu-toggle .menu-toggle__icon {
      display: block;

      div {
        opacity: 0;
      }

      div:first-child {
        opacity: 1;
        width: 30px;
        transform: translate(0, 4px) rotate(-45deg);
      }

      div:last-child {
        opacity: 1;
        width: 30px;
        transform: translate(0, -4px) rotate(45deg);
      }
    }
  }

  #colorSchemeToggle {
    border: 3px solid var(--color-scheme-toggle__border-color);
    display: flex;
    background-color: var(--white);
    border-radius: 99rem;
    margin: 1.25rem auto 0 auto;
    padding: 0;
    position: relative;
    width: fit-content;
    z-index: 0;

    &:hover {
      transform: scale(1.04);
    }

    @media (min-width: 1000px) {
      margin: 0 0 0 0.875rem;
    }

    &::before {
      content: '';
      height: 100%;
      background-color: var(--color-scheme-toggle__active__background-color);
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      clip-path: var(--color-scheme-toggle__clip-path);
      transition: clip-path 0.5s ease-in-out;
    }

    input {
      @include visually-hidden;
    }

    label {
      cursor: pointer;
      display: flex;
      justify-content: center;
      height: 3.375rem;
      width: 3.375rem;
      z-index: 100;

      &:hover {
        transform: scale(1.1);
      }

      &[for='colorSchemeLight'] {
        color: var(--color-scheme-toggle__light-color);
      }

      &[for='colorSchemeDark'] {
        color: var(--color-scheme-toggle__dark-color);
        margin-left: -7px;
      }

      svg {
        fill: currentColor;
        width: 2rem;
      }
    }
  }
</style>
