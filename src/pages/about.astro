---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="About Me - Tyler Combs">
  <style lang="scss">
    :root {
      --button--primary__background-color: var(--red);
      --button--primary__color: var(--white);
      --heading__color: var(--blue);
      --body__background-color: var(--white);
      --site-header__background-color: var(--blue);
      --menu-toggle__background-color: var(--blue);
      --menu-toggle--show__background-color: var(--black);
      --nav-link__color: var(--white);
      --color-scheme-toggle__border-color: transparent;
      --color-scheme-toggle__active__background-color: var(--black);
      --link--focus__outline-color: var(--red);

      @media (min-width: 1000px) {
        --nav-link__color: var(--black);
        --color-scheme-toggle__border-color: var(--black);
        --color-scheme-toggle__active__background-color: var(--blue);
      }
    }

    @media (prefers-color-scheme: dark) {
      :root:not([data-user-color-scheme]) {
        /* Dark Mode */
        --button--primary__background-color: var(--white);
        --button--primary__color: var(--black);
        --heading__color: var(--white);
        --body__background-color: var(--blue);
        --site-header__background-color: var(--white);
        --menu-toggle__background-color: var(--black);
        --menu-toggle--show__background-color: var(--blue);
        --nav-link__color: var(--blue);
        --color-scheme-toggle__border-color: var(--black);
        --color-scheme-toggle__active__background-color: var(--blue);

        @media (min-width: 1000px) {
          --nav-link__color: var(--white);
          --color-scheme-toggle__border-color: transparent;
          --color-scheme-toggle__active__background-color: var(--black);
        }
      }
    }

    :root[data-user-color-scheme='dark'] {
      /* Dark Mode */
      --button--primary__background-color: var(--white);
      --button--primary__color: var(--black);
      --heading__color: var(--white);
      --body__background-color: var(--blue);
      --site-header__background-color: var(--white);
      --menu-toggle__background-color: var(--black);
      --menu-toggle--show__background-color: var(--blue);
      --nav-link__color: var(--blue);
      --color-scheme-toggle__border-color: var(--black);
      --color-scheme-toggle__active__background-color: var(--blue);

      @media (min-width: 1000px) {
        --nav-link__color: var(--white);
        --color-scheme-toggle__border-color: transparent;
        --color-scheme-toggle__active__background-color: var(--black);
      }
    }

    .intro {
      @media (min-width: 1000px) {
        grid-column: 1 / 2;
      }
    }

    p {
      margin-bottom: 1.875rem;

      @media (min-width: 390px) {
        margin-bottom: 2.5rem;
      }
    }

    .content {
      @media (min-width: 1200px) {
        display: grid;
        grid-template-columns: minmax(0, 1fr), minmax(0, 1fr);
      }

      h2 {
        color: var(--heading__color);
        font-size: 1.5rem;
        margin-bottom: 1.5rem;
        text-transform: uppercase;
        font-variation-settings: 'wdth' 105;

        @media (min-width: 390px) {
          font-size: 2rem;
          font-variation-settings: 'wdth' 125;
        }
      }

      section {
        margin-bottom: 2.5rem;
      }

      .skills {
        ul {
          list-style-type: none;
          margin-top: 0;
          padding-left: 0;

          li {
            font-size: 1.25rem;
            padding-left: 0.5em;
            text-indent: -0.5em;
          }
        }
      }

      .employment,
      .education {
        h3 {
          display: flex;
          flex-direction: column;
          font-size: 1.25rem;
          font-variation-settings: 'wdth' 105;
          font-weight: 400;
          margin-block-end: 1.5rem;

          @media (min-width: 768px) {
            flex-direction: row;
            font-size: 1.5rem;
            column-gap: 0.5em;
          }

          @media (min-width: 1000px) {
            flex-wrap: wrap;
          }

          span {
            display: block;

            @media (min-width: 768px) {
              &:last-of-type {
                margin-inline-start: auto;
              }
            }

            @media (min-width: 1000px) {
              &:first-of-type {
                width: 100%;
              }
            }

            @media (min-width: 1550px) {
              &:first-of-type {
                width: auto;
              }
            }
          }
        }

        ul {
          font-size: 1rem;
          line-height: 1.5;
          margin-bottom: 1.5rem;
          padding-left: 0;
        }
      }
    }
  </style>

  <div class="intro">
