---
// import { ViewTransitions } from 'astro:transitions';
import '../styles/global.scss';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const {
  title,
  description = "From graphic designer to full-stack developer, I've been building the web for more than ten years. I love creating fast, accessible, and delightful user experiences.",
} = Astro.props;
const url = new URL(Astro.url.pathname, Astro.site);
---

<html lang="en" class="no-js">
  <head>
    <!-- meta charset/http-equiv/viewport -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- title -->
    <title>{title}</title>

    <!-- preconnect -->

    <!-- Async JS -->
    <!-- Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-J9CKP7R2Q0"
    ></script>

    <!-- CSS that includes @import -->

    <!-- JS -->
    <script>
      document.documentElement.classList.remove('no-js');
    </script>
    <script>
      // On page load or when changing themes, best to add inline in `head` to avoid FOUC
      const STORAGE_KEY = 'color-scheme';
      const setColorScheme = () => {
        console.log('run');
        if (localStorage.getItem(STORAGE_KEY)) {
          document.documentElement.dataset.colorScheme =
            localStorage.getItem(STORAGE_KEY);
        } else if (window.matchMedia('(prefers-color-scheme: dark)').matches) {
          document.documentElement.dataset.colorScheme = 'dark';
        } else {
          document.documentElement.dataset.colorScheme = 'light';
        }
      };

      // Runs on initial navigation.
      setColorScheme();

      // Runs on view transitions navigation.
      document.addEventListener('astro:after-swap', setColorScheme);
    </script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag() {
        dataLayer.push(arguments);
      }
      gtag('js', new Date());

      gtag('config', 'G-J9CKP7R2Q0');
    </script>

    <!-- CSS -->

    <!-- preload -->

    <!-- Defer JS -->

    <!-- prefetch / prerender -->

    <!-- Everything else ('SEO' meta tags, icons, Open Graph, etc.) -->
    <meta name="description" content={description} />

    <meta property="og:title" content={title} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={url} />
    <meta property="og:image" content="" />

    <link rel="icon" href="/favicon.ico" sizes="any" /><!-- 32×32 -->
    <link rel="icon" href="/icon.svg" type="image/svg+xml" />
    <link rel="apple-touch-icon" href="/apple-touch-icon.png" /><!-- 180×180 -->
    <link rel="manifest" href="/manifest.webmanifest" />

    <!-- Astro View Transitions -->
    <!-- <ViewTransitions /> -->
  </head>
  <body>
    <Header />
    <main id="main">
      <slot />
    </main>
    <Footer />
  </body>
</html>
